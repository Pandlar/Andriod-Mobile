<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_top"
    tools:context=".account01">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/menu_account"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="220dp"
        app:layout_constraintBottom_toTopOf="@+id/handynummer_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_account" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="96dp"
        android:layout_height="95dp"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="168dp"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/menu_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera_white" />



    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="163dp"
        android:layout_marginTop="107dp"
        android:text="SETTINGS"
        app:layout_constraintBottom_toTopOf="@+id/menu_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationX="20dp">

        <Switch
            android:id="@+id/push"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="PUSH-BENACHRICHTIGUNGEN"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="270dp" />

        <Switch
            android:id="@+id/email"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="E-MAIL NOTIFICATIONS"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="280dp" />

        <Button
            android:id="@+id/passwortbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASSWORT"
            android:background="@color/colorBlack"
            android:textStyle="bold"
            android:translationX="-135dp"
            android:translationY="285dp" />

        <Button
            android:id="@+id/btn_bezahlung2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="BEZAHLUNG"
            android:background="@color/colorBlack"
            android:textStyle="bold"
            android:translationX="-132dp"
            android:translationY="270dp" />
        <Button
            android:id="@+id/btn_hilfe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="HILFE"
            android:background="@color/colorBlack"
            android:textStyle="bold"
            android:translationX="-154dp"
            android:translationY="255dp" />
        <Button
            android:id="@+id/agbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGB"
            android:background="@color/colorBlack"
            android:textStyle="bold"
            android:translationX="-158dp"
            android:translationY="240dp" />


        <Button
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:background="@color/colorBlack"
            android:textStyle="bold"
            android:translationX="-158dp"
            android:translationY="225dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home5">

    <TextView
        android:id="@+id/text_Feedback"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="Meine Fahrten"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/btn_offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Feedback" />

    <View
        android:id="@+id/linie_oben"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Feedback" />

    <TextView
        android:id="@+id/kasten_aktuell"
        android:layout_width="191dp"
        android:layout_height="59dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:text="Aktuell"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kasten_chronik"
        android:layout_width="191dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/area_style_grey"
        android:text="Chronik"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/linie_unten"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Feedback" />

    <View
        android:id="@+id/border_oben"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="104dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Feedback" />

    <View
        android:id="@+id/border_unten"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="264dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Feedback" />

    <TextView
        android:id="@+id/textView_Fahrer"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="190dp"
        android:layout_marginTop="45dp"
        android:text="Du bist Fahrer!"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linie_unten" />

    <TextView
        android:id="@+id/textView_Uhrzeit"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="45dp"
        android:text="08.Juni 08:00 Uhr"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linie_unten" />

    <TextView
        android:id="@+id/textView_Abfahrt_Ort"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="100dp"
        android:text="Berliner Straße 30, 10715 Berlin"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linie_unten" />

    <TextView
        android:id="@+id/textView_Ankunft_Ort"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="75dp"
        android:text="Bandensche Straße 50-51, 10715 Berlin"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linie_unten" />

    <TextView
        android:id="@+id/textView_Freie_Sitzplaetze"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="185dp"
        android:layout_marginTop="140dp"
        android:text="Freie Sitzplätze"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linie_unten" />

    <TextView
        android:id="@+id/textView_Anzahl_Freie_Sitzplaetze"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="165dp"
        android:layout_marginTop="140dp"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linie_unten" />

    <Button
        android:id="@+id/btn_jetzt_bestätigen"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginBottom="290dp"
        android:layout_marginEnd="50dp"
        android:background="@color/colorBlack"
        android:text="bestätigt"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation" >
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>